{
    "name": "bairwell/middleware-cors",
    "description": "A PSR-15 middleware layer for providing CORS (Cross Origin Request Security) headers and security provisions. Instead of just allowing invalid CORs requests to come through, this middleware actively blocks them after validating.",
    "keywords": ["psr-7","psr-15","middleware","cors","cross origin request security"],
    "homepage": "https://github.com/bairwell/middleware-cors",
    "license": "MIT",
    "authors": [
        {
            "name": "Richard Bairwell",
            "email": "richard@bairwell.com",
            "homepage": "http://www.bairwell.com"
        }
    ],
    "type": "library",
    "require": {
        "php": "^7.0",
        "psr/http-message": "^1.0",
        "psr/log": "~1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "3.*",
        "zendframework/zend-expressive-router":"^3.0",
        "phpstan/phpstan":"~0.9"
    },
    "autoload": {
        "psr-4": {"Bairwell\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Bairwell\\": "tests/"}
    },
    "extra": {
        "zf": {
            "config-provider": "Bairwell\\MiddlewareCors\\ZendFramework\\ConfigProvider"
        }
    },
    "support": {
        "issues": "https://github.com/bairwell/middleware-cors/issues",
        "source": "https://github.com/bairwell/middleware-cors",
        "rss": "https://github.com/bairwell/middleware-cors/releases.atom"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "vendor/bin/phpstan analyse -l max ./src",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
